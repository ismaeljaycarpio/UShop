@model IEnumerable<UShop.Entities.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table id="movies" class="table table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            //load
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}

