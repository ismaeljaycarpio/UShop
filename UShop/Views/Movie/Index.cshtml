@model IEnumerable<UShop.Entities.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">New Movie</a>

@if (Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        @foreach (var m in Model)
        {
            <tr>
                <td><a href="@Url.Action("Edit", new { id = m.Id})">@m.Name</a></td>
                <td>@m.Genre.Name</td>
            </tr>
        }

    </table>
}

