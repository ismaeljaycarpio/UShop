@model UShop.Entities.Customer

@{
    ViewBag.Title = "Details";
}

<div>
    <h2>@Model.Name</h2>

    <ul>
        <li><b>Membership Type:</b> @Model.MembershipType.Name</li>
        @if (Model.BirthDate.HasValue)
        {
            <li>
                <b>Birth Date: </b>
                @Model.BirthDate.Value.ToShortDateString()
            </li>
        }
    </ul>
</div>

